# Project Environment Variables
# Copy this to .env in your project root

# === OSRM Configuration ===
OSRM_HOST=osrm
OSRM_PORT=5000
OSRM_PROFILE=truck

# === Kafka Configuration ===
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC=truck-data
KAFKA_CONSUMER_GROUP=backend-consumer
KAFKA_RETRIES=5
KAFKA_RETRY_BACKOFF=1000

# === WebSocket Configuration ===
BACKEND_WS_URL=ws://backend:3000
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000
WS_RECONNECT_DELAY=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# === Server Configuration ===
NODE_ENV=production
PORT=3000
CORS_ORIGIN=http://localhost:5173

# === Frontend Configuration ===
VITE_BACKEND_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_MAP_CENTER_LAT=36.8000
VITE_MAP_CENTER_LNG=10.1800
VITE_MAP_ZOOM=8

# === Simulation Configuration ===
UPDATE_INTERVAL=1.0
STEP_SIZE=0.005
MAX_RETRIES=3
SIMULATION_SPEED=1.0

# === Truck Configuration ===
TRUCK_COUNT=3
MIN_WEIGHT=5000
MAX_WEIGHT=20000
MIN_SPEED=40
MAX_SPEED=80

# === Tunisia Coordinates ===
BASE_LATITUDE=36.8000
BASE_LONGITUDE=10.1800

# === Logging Configuration ===
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# === Resource Limits ===
OSRM_MEMORY_LIMIT=4G
OSRM_CPU_LIMIT=2